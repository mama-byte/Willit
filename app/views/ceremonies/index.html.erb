
<div class = "container1">
  <div>
    <%= image_tag('pablo-done-removebg-preview.png',class: 'top_image')%>
  </div>

  <div class ="purple_box">
    <div class = "container2">
      <h4>Review Your Ceremony Details</h4>
      <% if @ceremony == nil %>
      <div class= "plus">
      <%= link_to image_tag("plus_white.png", size: 40), new_ceremony_path %>
      </div>
      <%else%>

      <div class = "review">
        <p>Ceremony Type: <%= @ceremony.ceremony_type ? @ceremony.ceremony_type: nil %> </p>
        <p>Venue: <%= @ceremony.venue ? @ceremony.venue : nil %> </p>
        <p>Burial Type: <%= @ceremony.burial_type ? @ceremony.burial_type: nil %> </p>
        <p>Details: <%= @ceremony.details ? @ceremony.details: nil %> </p>
        <p>Epitaph: <%= @ceremony.epitaph ? @ceremony.epitaph: nil  %> </p>
        <p>Funeral Home: <%= @ceremony.funeral_home ? @ceremony.funeral_home: nil  %> </p>
        <p>Press Release: <%= @ceremony.press_release ? @ceremony.press_release: nil  %> </p>
        <p>Speaker: <%= @ceremony.speaker_id ? @ceremony.speaker.full_name: nil  %> </p>
        <p>Music Selector: <%= @ceremony.music_selector_id ? @ceremony.music_selector.full_name: nil  %> </p>
        <li>
          <% if policy(@ceremony).edit? %>
          <%= link_to image_tag('edit.png',width:40), edit_ceremony_path(@ceremony) %>
          <% end %>
          <% if policy(@ceremony).destroy? %>
          <%= link_to image_tag('bin.png',width:40), ceremony_path(@ceremony),
          method: :delete, data: {
            confirm: 'Are you sure?' }%>
            <% end %>
          </li>
      </div>
    </div>
    <%= link_to "Send details to email", :controller => "ceremonies", :action => "send_order_mail", :id => @ceremony.user.id do %>
      <button type="button" class="custom-button btn btn-success">Email Details</button>
      <% end %>
  </div>
<% end %>


