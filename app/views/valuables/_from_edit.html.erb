<div class="container">
  <div class="row">
    <div class="col-sm m-5">
     <div class="text_box">
        <%= simple_form_for @valuable, edit_valuable_path(@valuable), method: :patch  do |f| %>

            <%= f.input :title, :label => "Title"%>
            <%= f.input :description, :label => "Description" %>
            <%= f.input :value, :label => "Monetary Value" %>
            <%= f.input :image_url, :label => "add a photo" %>
            <%= f.hidden_field :category, value: @category %>
            <%= f.hidden_field :item, value: @item %>
            <%= f.input :contact, collection: current_user.contacts, value_method: :id, label_method: :full_name, :label => "Choose who will recieve this item"%>

            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
            <%= f.submit 'Save' , class: 'greenButton' %>

        <%end%>
        </div>
      </div>
  </div>
</div>
